<p id="notice"><%= notice %></p>

<p>
  <strong>Img:</strong>
  <%= @post.img %>
</p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>Summary:</strong>
  <%= @post.summary %>
</p>

<p>
  <strong>Tags:</strong>
  <% @post.tags.each_with_index do |tag, index| %>
    <% if index == @post.tags.length - 1 %>
      <%= tag.name %>
    <% else %>
      <%= tag.name %>,
    <% end %>
  <% end %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
